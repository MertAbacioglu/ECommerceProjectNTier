@model CartPageVM
@{
    ViewBag.Title = "CartPage";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>CartPage</h2>

<div class="jumbotron">
    Odemeniz gereken toplan tutar => @Model.Cart.TotalPrice ... Sipaisi onayamak icin @Html.ActionLink("Tıklayınız","SiparisOnayla") 
</div>
<div class="row product-list">

    @foreach (CartItem item in Model.Cart.Sepetim)
    {
        <div class="col-md-4">
            <section class="panel">
                <div class="pro-img-box">

                    @if (item.ImagePath == null || item.ImagePath.Contains("nightlife"))
                    {
                        <img src="~/Pictures/CityLife.jpg" width="100" height="300" alt="Resim Yok" title="@item.Name" />

                    }
                    else
                    {
                        <img src="@item.ImagePath" alt="Resim Yok" width="100" height="300" title="@item.Name" />
                    }


                   




                    <a href="@Url.Action("DeleteFromCart",new { id=item.ID})" class="adtocart">
                        <i class="glyphicon glyphicon-remove"></i>
                    </a>
                </div>

                <div class="panel-body text-center">
                    <h4>
                        <a href="#" class="pro-title" title="@item.Name">
                            @item.Amount
                        </a>
                    </h4>
                    <p class="price">$@item.SubTotal</p>
                </div>
            </section>
        </div>
    }



</div>